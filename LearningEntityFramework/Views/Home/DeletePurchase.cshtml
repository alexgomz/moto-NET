@model Repository.Models.Purchase

@{
    ViewBag.Title = "Delete Purchase";
    Model.isActive = false;
}

<h2>Delete Purchase</h2>

@using (Html.BeginForm("DeletePurchase", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.isActive)
    @Html.HiddenFor(m => m.customerId) @Html.HiddenFor(m => m.Id) @Html.HiddenFor(m => m.motorcycleId)
<div class="form-horizontal">
    <h4>Are you sure you want to delete this purchase?</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Purchase Date: </label> @Html.DisplayFor(m => m.PurchaseDate)
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Customer: </label> @Model.customer.FirstName.ToString() @Model.customer.LastName.ToString()
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Motorcycle: </label>@Html.DisplayFor(m => m.Motorcycle.Name)
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </div>
</div>
}

<p>Are you sure you want to delete this purchase?</p>




<div>
    @Html.ActionLink("Back to List", "Index")
</div>