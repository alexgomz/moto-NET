@model Repository.Models.Customer

@{
    ViewBag.Title = "Delete Customer";
}

<h2>Delete Customer</h2>

@using (Html.BeginForm("DeleteCustomer", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-horizontal">
        <h4>Are you sure you want to delete this customer?</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>First Name: </label> @Html.DisplayFor(m => m.FirstName)
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Last Name: </label>@Html.DisplayFor(m => m.LastName)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<p>Are you sure you want to delete this customer?</p>




<div>
    @Html.ActionLink("Back to List", "Index")
</div>
