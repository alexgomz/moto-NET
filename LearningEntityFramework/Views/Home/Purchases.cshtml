@model List<Repository.Models.Purchase>

@{
    ViewBag.Title = "Purchases";
}

<h2 style="padding-top: 0.5em;">Purchases</h2>

<div>
    @Html.ActionLink("Create New Purchase", "CreatePurchase")
</div>

<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Purchase Date</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Motorcycle</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].PurchaseDate</td>
                    <td>@Model[i].customer.FirstName</td>
                    <td>@Model[i].customer.LastName</td>
                    <td>@Model[i].Motorcycle.Name</td>
                    <td>@Html.ActionLink("Delete", "DeletePurchase", new { purId = Model[i].Id })</td>
                </tr>
            }
        </tbody>
    </table>
</div>