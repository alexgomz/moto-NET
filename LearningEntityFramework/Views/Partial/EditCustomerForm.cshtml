@model LearningEntityFramework.ViewModels.CustomerViewModel

<div class="modal-dialog" role="form">
    @(Html.BeginForm("Customers", "Home", FormMethod.Post))
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Edit Customer</h5>
        </div>
        <div class="modal-body">
            @Html.HiddenFor(e=>e.EditCustomer.Id)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(e => e.EditCustomer.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(e => e.EditCustomer.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(e => e.EditCustomer.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(e => e.EditCustomer.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(e => e.EditCustomer.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(e => e.EditCustomer.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Edit" id="edit" class="btn btn-primary" name="editButton" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
