@model LearningEntityFramework.ViewModels.MotorcycleViewModel


        <div class="modal-dialog" role="form">
            @Html.BeginForm("Motorcycles", "Home", FormMethod.Post)
            @Html.HiddenFor(m => m.EditMotorcycle.Id);
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Edit Motorcycle</h5>
                </div>
                <div class="modal-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.EditMotorcycle.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.EditMotorcycle.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.EditMotorcycle.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.EditMotorcycle.Year, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.EditMotorcycle.Year, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.EditMotorcycle.Year, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.EditMotorcycle.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.EditMotorcycle.Price, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.EditMotorcycle.Price, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Edit" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>